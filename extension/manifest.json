{
    "manifest_version": 3,
    "name": "TwitBot Worker",
    "version": "1.1",
    "description": "Twitter Crawler Bot (v1.1)",
    "permissions": [
        "cookies",
        "storage",
        "alarms",
        "scripting"
    ],
    "host_permissions": [
        "https://x.com/*",
        "https://twitter.com/*",
        "http://localhost:3000/*"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": "icon.png"
    },
    "icons": {
        "128": "icon.png"
    }
}